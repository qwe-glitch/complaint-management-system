@model List<ComplaintManagementSystem.Controllers.UserViewModel>
@{
    ViewData["Title"] = "Private Chat";
    var currentUserId = ViewBag.CurrentUserId as string;
    var currentUserType = ViewBag.CurrentUserType as string;
    var currentUserName = ViewBag.CurrentUserName as string;
}

<link rel="stylesheet" href="~/css/privatechat.css" />

<div class="chat-container">
    <!-- Sidebar: User List -->
    <div class="chat-sidebar">
        <div class="sidebar-header">
            <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Messages</h5>
        </div>
        <div class="user-search">
            <input type="text" id="userSearch" class="form-control" placeholder="Search users...">
        </div>
        <div class="user-list" id="userList">
            @foreach (var user in Model)
            {
                <div class="user-item" 
                     data-user-id="@user.UserId" 
                     data-user-type="@user.UserType"
                     data-user-name="@user.UserName">
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                        <span class="online-indicator" id="status-@user.UserType-@user.UserId"></span>
                    </div>
                    <div class="user-info">
                        <div class="user-name">@user.UserName</div>
                        <div class="user-role">
                            <span class="badge @(user.UserType == "Admin" ? "bg-danger" : "bg-primary") badge-sm">
                                @user.UserType
                            </span>
                            <small class="text-muted">@user.Department</small>
                        </div>
                    </div>
                    <span class="unread-badge d-none" id="unread-@user.UserType-@user.UserId">0</span>
                </div>
            }
            @if (!Model.Any())
            {
                <div class="text-center text-muted p-4">
                    <i class="bi bi-people display-6"></i>
                    <p class="mt-2 mb-0">No other users available</p>
                </div>
            }
        </div>
    </div>

    <!-- Main Chat Area -->
    <div class="chat-main">
        <!-- Chat Header -->
        <div class="chat-header" id="chatHeader">
            <div class="d-flex align-items-center">
                <i class="bi bi-chat-square-text display-6 text-muted"></i>
                <div class="ms-3">
                    <h5 class="mb-0 text-muted">Select a conversation</h5>
                    <small class="text-muted">Choose a user from the list to start chatting</small>
                </div>
            </div>
            <!-- Initial state: no actions -->
        </div>

        <!-- Messages Area -->
        <div class="chat-messages" id="chatMessages">
            <div class="empty-state">
                <i class="bi bi-chat-heart display-1 text-muted"></i>
                <h5 class="mt-3 text-muted">No conversation selected</h5>
                <p class="text-muted">Select a user from the sidebar to start a private conversation</p>
            </div>
        </div>

        <!-- Message Input -->
        <div class="chat-input" id="chatInput" style="display: none;">
            <form id="messageForm" class="d-flex gap-2 position-relative">
                <button type="button" class="btn btn-light border" id="emojiBtn">
                    <i class="bi bi-emoji-smile"></i>
                </button>
                <button type="button" class="btn btn-light border" id="micBtn" title="Voice Input">
                    <i class="bi bi-mic"></i>
                </button>
                <button type="button" class="btn btn-light border" id="imageBtn" title="Send Image">
                    <i class="bi bi-image"></i>
                </button>
                <button type="button" class="btn btn-light border" id="gifBtn" title="Send GIF">
                    <i class="bi bi-filetype-gif"></i>
                </button>
                <div id="emojiPickerContainer"></div>
                <div id="gifPickerContainer" class="gif-picker-container">
                    <div class="gif-picker-header">
                        <input type="text" id="gifSearchInput" class="form-control form-control-sm" placeholder="Search GIFs...">
                        <button type="button" class="btn-close" id="gifPickerClose"></button>
                    </div>
                    <div class="gif-picker-content" id="gifPickerContent">
                        <div class="text-center text-muted p-3">
                            <i class="bi bi-search"></i> Search for GIFs
                        </div>
                    </div>
                    <div class="gif-picker-footer">
                        <small class="text-muted">Powered by GIPHY</small>
                    </div>
                </div>
                <input type="file" id="imageFileInput" accept="image/*" style="display: none;">
                <input type="text" 
                       id="messageText" 
                       class="form-control" 
                       placeholder="Type your message..." 
                       autocomplete="off"
                       maxlength="1000">
                <button type="submit" class="btn btn-primary" id="sendBtn">
                    <i class="bi bi-send-fill"></i>
                </button>
            </form>
            <!-- Image Preview -->
            <div id="imagePreview" class="image-preview d-none">
                <img id="previewImage" src="" alt="Preview">
                <button type="button" class="btn btn-sm btn-danger" id="cancelImage">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="typing-indicator d-none" id="typingIndicator">
                <span></span><span></span><span></span>
            </div>
        </div>
    </div>
</div>

<!-- Hidden data for JavaScript -->
<input type="hidden" id="currentUserId" value="@currentUserId" />
<input type="hidden" id="currentUserType" value="@currentUserType" />
<input type="hidden" id="currentUserName" value="@currentUserName" />

@section Styles {
    <!-- Styles removed to allow default container spacing -->
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://unpkg.com/picmo@latest/dist/umd/index.js"></script>
    <script src="~/js/privatechat.js"></script>
}
