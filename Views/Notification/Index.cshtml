@model IEnumerable<ComplaintManagementSystem.Models.ViewModels.NotificationViewModel>
@{
    ViewData["Title"] = "Notifications";
    var userType = ViewBag.UserType;
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 fw-bold">
                <i class="bi bi-bell text-gradient"></i> Notifications
            </h2>
            <p class="text-muted mb-0">Stay updated with your latest activities</p>
        </div>
        @if (Model != null && Model.Any(n => !n.IsRead))
        {
            <button type="button" class="btn btn-outline-primary rounded-pill" onclick="markAllAsRead()">
                <i class="bi bi-check-all me-1"></i> Mark All as Read
            </button>
        }
    </div>
</div>

<!-- Filter Tabs -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-3">
        <ul class="nav nav-pills" id="notificationFilter" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="pill" 
                        data-bs-target="#all" type="button" role="tab">
                    <i class="bi bi-inbox me-1"></i> All
                    @if (Model != null)
                    {
                        <span class="badge bg-secondary ms-1">@Model.Count()</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="unread-tab" data-bs-toggle="pill" 
                        data-bs-target="#unread" type="button" role="tab">
                    <i class="bi bi-bell-fill me-1"></i> Unread
                    @if (Model != null)
                    {
                        <span class="badge bg-primary ms-1">@Model.Count(n => !n.IsRead)</span>
                    }
                </button>
            </li>
        </ul>
    </div>
</div>

<!-- Notifications Content -->
<div class="tab-content" id="notificationContent">
    <!-- All Notifications -->
    <div class="tab-pane fade show active" id="all" role="tabpanel">
        @if (Model != null && Model.Any())
        {
            <div class="notification-list">
                @foreach (var notification in Model)
                {
                    <div class="card border-0 shadow-sm mb-3 notification-card @(notification.IsRead ? "" : "unread") animate-fade-in-up">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="notification-icon me-3">
                                    @if (!notification.IsRead)
                                    {
                                        <div class="icon-circle bg-primary text-white" style="width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-bell-fill"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="icon-circle bg-light text-muted" style="width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-bell"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    @if (!notification.IsRead)
                                    {
                                        <span class="badge bg-primary mb-2">New</span>
                                    }
                                    <p class="mb-2 fw-semibold">@notification.Message</p>
                                    @if (notification.ComplaintId != null && notification.ComplaintTitle != null)
                                    {
                                        <div class="small text-muted mb-2">
                                            <i class="bi bi-link-45deg me-1"></i>
                                            <a href="/Complaint/Details/@notification.ComplaintId" class="text-decoration-none">
                                                @notification.ComplaintTitle
                                            </a>
                                        </div>
                                    }
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@notification.SentAt.ToString("dd MMM yyyy, HH:mm")
                                    </small>
                                </div>
                                <div class="d-flex flex-column gap-2 ms-2">
                                    @if (!notification.IsRead)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-primary rounded-pill" 
                                                onclick="markAsRead(@notification.NotificationId)" title="Mark as Read">
                                            <i class="bi bi-check2"></i>
                                        </button>
                                    }
                                    <button type="button" class="btn btn-sm btn-outline-danger rounded-pill" 
                                            onclick="deleteNotification(@notification.NotificationId)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-bell-slash" style="font-size: 4rem; color: var(--gray-300);"></i>
                </div>
                <h5 class="text-muted">No Notifications</h5>
                <p class="text-muted">You're all caught up!</p>
            </div>
        }
    </div>

    <!-- Unread Notifications -->
    <div class="tab-pane fade" id="unread" role="tabpanel">
        @if (Model != null && Model.Any(n => !n.IsRead))
        {
            <div class="notification-list">
                @foreach (var notification in Model.Where(n => !n.IsRead))
                {
                    <div class="card border-0 shadow-sm mb-3 notification-card unread animate-fade-in-up">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start">
                                <div class="notification-icon me-3">
                                    <div class="icon-circle bg-primary text-white" style="width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-bell-fill"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <span class="badge bg-primary mb-2">New</span>
                                    <p class="mb-2 fw-semibold">@notification.Message</p>
                                    @if (notification.ComplaintId != null && notification.ComplaintTitle != null)
                                    {
                                        <div class="small text-muted mb-2">
                                            <i class="bi bi-link-45deg me-1"></i>
                                            <a href="/Complaint/Details/@notification.ComplaintId" class="text-decoration-none">
                                                @notification.ComplaintTitle
                                            </a>
                                        </div>
                                    }
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@notification.SentAt.ToString("dd MMM yyyy, HH:mm")
                                    </small>
                                </div>
                                <div class="d-flex flex-column gap-2 ms-2">
                                    <button type="button" class="btn btn-sm btn-outline-primary rounded-pill" 
                                            onclick="markAsRead(@notification.NotificationId)" title="Mark as Read">
                                        <i class="bi bi-check2"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger rounded-pill" 
                                            onclick="deleteNotification(@notification.NotificationId)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-check-circle" style="font-size: 4rem; color: var(--success);"></i>
                </div>
                <h5 class="text-muted">All Caught Up!</h5>
                <p class="text-muted">You have no unread notifications</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function markAsRead(notificationId) {
            fetch('/Notification/MarkAsRead', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ notificationId: notificationId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (window.Toast) {
                        Toast.show('Notification marked as read', 'success');
                    }
                    setTimeout(() => location.reload(), 500);
                }
            })
            .catch(() => {
                if (window.Toast) {
                    Toast.show('Failed to mark notification as read', 'error');
                }
            });
        }

        function markAllAsRead() {
            fetch('/Notification/MarkAllAsRead', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (window.Toast) {
                        Toast.show('All notifications marked as read', 'success');
                    }
                    setTimeout(() => location.reload(), 500);
                }
            })
            .catch(() => {
                if (window.Toast) {
                    Toast.show('Failed to mark all as read', 'error');
                }
            });
        }

        function deleteNotification(notificationId) {
            if (!confirm('Are you sure you want to delete this notification?')) return;

            fetch('/Notification/Delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ notificationId: notificationId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (window.Toast) {
                        Toast.show('Notification deleted', 'success');
                    }
                    setTimeout(() => location.reload(), 500);
                }
            })
            .catch(() => {
                if (window.Toast) {
                    Toast.show('Failed to delete notification', 'error');
                }
            });
        }
    </script>
}

<style>
    .notification-card.unread {
        border-left: 4px solid var(--primary);
        background: linear-gradient(to right, rgba(13, 110, 253, 0.03), transparent);
    }

    .notification-card {
        transition: all var(--transition-base);
    }

    .notification-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }

    .nav-pills .nav-link {
        border-radius: var(--radius-lg);
        padding: 0.5rem 1rem;
        color: var(--text-secondary);
        font-weight: 500;
    }

    .nav-pills .nav-link.active {
        background: var(--gradient-primary);
        color: white;
    }

    .nav-pills .nav-link:hover:not(.active) {
        background-color: var(--gray-100);
    }
</style>
