@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row g-0 min-vh-100">
    <div class="col-lg-6 d-flex align-items-center justify-content-center p-4 bg-white">
        <div class="w-100" style="max-width: 450px;">
            <div class="mb-5">
                <a href="/Account/Login" class="text-decoration-none text-muted d-inline-flex align-items-center mb-4">
                    <i class="bi bi-arrow-left me-2"></i> Back to Login
                </a>
                <div>
                    <div class="icon-circle bg-warning text-white d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; border-radius: 50%;">
                        <i class="bi bi-key-fill" style="font-size: 1.8rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Forgot Password?</h2>
                    <p class="text-muted">No worries, we'll send you reset instructions.</p>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <div>@TempData["SuccessMessage"]</div>
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label for="email" class="form-label fw-semibold">
                        <i class="bi bi-envelope me-1 text-primary"></i> Email Address
                    </label>
                    <input type="email" name="email" class="form-control form-control-lg" 
                           placeholder="Enter your registered email" required autofocus />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm hover-lift">
                        <i class="bi bi-send me-2"></i> Send Reset Code
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Side - Info -->
    <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center p-5 text-white" 
         style="background: var(--gradient-primary);">
        <div class="text-center" style="max-width: 500px;">
            <i class="bi bi-shield-lock" style="font-size: 5rem; opacity: 0.9;"></i>
            <h2 class="fw-bold mt-4 mb-4">Secure Account Recovery</h2>
            <p class="lead mb-5" style="opacity: 0.95;">
                We take your security seriously. Follow the steps to safely recover access to your account.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
