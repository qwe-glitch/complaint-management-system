@{
    ViewData["Title"] = "Verify Email";
}

<div class="row g-0 min-vh-100">
    <!-- Left Side - Verification Form -->
    <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
        <div class="p-5 w-100" style="max-width: 500px;">
            <div class="mb-4 text-center">
                <div class="icon-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" 
                     style="width: 60px; height: 60px; border-radius: 50%;">
                    <i class="bi bi-envelope-check" style="font-size: 1.8rem;"></i>
                </div>
                <h2 class="fw-bold mb-2">Verify Your Email</h2>
                <p class="text-muted">We've sent a verification code to <strong>@ViewBag.Email</strong></p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="VerifyEmail" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" name="email" value="@ViewBag.Email" />

                <div class="mb-4">
                    <label for="otpCode" class="form-label fw-semibold">Verification Code</label>
                    <input type="text" class="form-control form-control-lg text-center fw-bold" 
                           id="otpCode" name="otpCode" placeholder="Enter 6-digit code" 
                           maxlength="6" style="letter-spacing: 5px; font-size: 1.5rem;" required />
                    <div class="form-text text-center mt-2">
                        The code will expire in 15 minutes.
                    </div>
                </div>

                <div class="d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm hover-lift">
                        Verify Email
                    </button>
                </div>
            </form>

            <div class="text-center">
                <p class="text-muted mb-0">Didn't receive the code?</p>
                <button type="button" class="btn btn-link text-decoration-none fw-semibold" id="resendBtn" onclick="resendOTP()">
                    Resend Code
                </button>
                <div id="resendMessage" class="mt-2 small"></div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/Account/Login" class="text-decoration-none text-muted small">
                    <i class="bi bi-arrow-left me-1"></i> Back to Login
                </a>
            </div>
        </div>
    </div>

    <!-- Right Side - Image/Info -->
    <div class="col-lg-6 d-none d-lg-block bg-light position-relative overflow-hidden">
        <div class="position-absolute top-0 start-0 w-100 h-100" 
             style="background: linear-gradient(135deg, var(--primary) 0%, #2a5298 100%); opacity: 0.9;"></div>
        
        <div class="position-relative h-100 d-flex flex-column align-items-center justify-content-center text-white p-5 text-center">
            <div class="mb-4">
                <i class="bi bi-shield-lock" style="font-size: 4rem;"></i>
            </div>
            <h2 class="fw-bold mb-3">Secure Your Account</h2>
            <p class="lead mb-0" style="max-width: 400px;">
                Verifying your email helps us keep your account secure and ensures you receive important updates about your complaints.
            </p>
            
            <!-- Decorative circles -->
            <div class="position-absolute" style="top: -10%; right: -10%; width: 300px; height: 300px; border-radius: 50%; border: 2px solid rgba(255,255,255,0.1);"></div>
            <div class="position-absolute" style="bottom: -5%; left: -5%; width: 200px; height: 200px; border-radius: 50%; background: rgba(255,255,255,0.05);"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function resendOTP() {
            var btn = document.getElementById('resendBtn');
            var msg = document.getElementById('resendMessage');
            var email = '@ViewBag.Email';
            
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Sending...';
            msg.className = 'mt-2 small text-muted';
            msg.innerText = '';

            fetch('/Account/ResendOTP', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'email=' + encodeURIComponent(email)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    msg.className = 'mt-2 small text-success fw-bold';
                    msg.innerText = data.message;
                    
                    // Disable button for 60 seconds
                    var seconds = 60;
                    var interval = setInterval(function() {
                        btn.innerText = 'Resend in ' + seconds + 's';
                        seconds--;
                        if (seconds < 0) {
                            clearInterval(interval);
                            btn.disabled = false;
                            btn.innerText = 'Resend Code';
                        }
                    }, 1000);
                } else {
                    msg.className = 'mt-2 small text-danger';
                    msg.innerText = data.message;
                    btn.disabled = false;
                    btn.innerText = 'Resend Code';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                msg.className = 'mt-2 small text-danger';
                msg.innerText = 'Failed to send request. Please try again.';
                btn.disabled = false;
                btn.innerText = 'Resend Code';
            });
        }
    </script>
}
