@{
    ViewData["Title"] = "Verify Reset Code";
    var email = ViewBag.Email as string;
}

<div class="row g-0 min-vh-100">
    <div class="col-lg-6 d-flex align-items-center justify-content-center p-4 bg-white">
        <div class="w-100" style="max-width: 450px;">
            <div class="mb-5">
                <a href="/Account/ForgotPassword" class="text-decoration-none text-muted d-inline-flex align-items-center mb-4">
                    <i class="bi bi-arrow-left me-2"></i> Back
                </a>
                <div>
                    <div class="icon-circle bg-info text-white d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; border-radius: 50%;">
                        <i class="bi bi-shield-check" style="font-size: 1.8rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Check Your Email</h2>
                    <p class="text-muted">We sent a verification code to <strong>@email</strong></p>
                </div>
            </div>

            <form asp-action="VerifyResetCode" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                
                <input type="hidden" name="email" value="@email" />

                <div class="mb-4">
                    <label for="otpCode" class="form-label fw-semibold">
                        <i class="bi bi-123 me-1 text-primary"></i> Verification Code
                    </label>
                    <input type="text" name="otpCode" class="form-control form-control-lg text-center letter-spacing-2" 
                           placeholder="Enter 6-digit code" maxlength="6" required autofocus 
                           style="letter-spacing: 0.5em; font-family: monospace; font-size: 1.5rem;" />
                </div>

                <div class="d-grid mb-4">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm hover-lift">
                        <i class="bi bi-check-lg me-2"></i> Verify Code
                    </button>
                </div>
            </form>
            
            <div class="text-center">
                <p class="text-muted mb-2">Didn't receive the code?</p>
                <form asp-action="ForgotPassword" method="post" class="d-inline">
                    <input type="hidden" name="email" value="@email" />
                    <button type="submit" class="btn btn-link p-0 text-decoration-none">Resend Code</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Right Side - Info -->
    <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center p-5 text-white" 
         style="background: var(--gradient-primary);">
        <div class="text-center" style="max-width: 500px;">
            <i class="bi bi-envelope-check" style="font-size: 5rem; opacity: 0.9;"></i>
            <h2 class="fw-bold mt-4 mb-4">Email Verification</h2>
            <p class="lead mb-5" style="opacity: 0.95;">
                Enter the code sent to your email to verify your identity and reset your password.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
