<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Complaint Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/chatbot.css" />
    <link rel="stylesheet" href="~/css/darkmode.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Enhanced Sticky Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top shadow-sm" style="background: var(--gradient-primary);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center fw-bold" href="/">
                <div class="icon-circle bg-white text-primary me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                    <i class="bi bi-shield-check" style="font-size: 1.25rem;"></i>
                </div>
                <span class="d-none d-md-inline">Segamat Community</span>
                <span class="d-md-none">CMS</span>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto small">
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded" href="/Home">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded" href="/Announcement">
                            <i class="bi bi-megaphone me-1"></i> Announcement
                        </a>
                    </li>
                    @if (Context.Session.GetString("UserType") != "Admin" && Context.Session.GetString("UserType") != "Staff")
                    {
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded" href="/Help">
                                <i class="bi bi-life-preserver me-1"></i> Help
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded" href="/Contact" aria-label="Contact Us">
                                <i class="bi bi-telephone me-1"></i> Contact Us
                            </a>
                        </li>
                    }
                    @if (Context.Session.GetString("UserType") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded" href="/Complaint">
                                <i class="bi bi-clipboard-data me-1"></i> 
                                @if (Context.Session.GetString("UserType") == "Citizen")
                                {
                                    <span>My Complaints</span>
                                }
                                else
                                {
                                    <span>Complaints</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded position-relative" href="/Notification">
                                <i class="bi bi-bell me-1"></i> Notifications
                                <!-- Notification badge placeholder - can be enhanced with real count -->
                                @* <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span> *@
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserType") == "Citizen")
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded" href="/Account/Profile">
                                    <i class="bi bi-person-circle me-1"></i> My Profile
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("UserType") == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle px-3 rounded" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-lg shadow-lg border-0 rounded-xl animate-fade-in">
                                    <li><a class="dropdown-item rounded py-2" href="/Admin/Dashboard">
                                        <i class="bi bi-speedometer2 me-2 text-primary"></i> Dashboard
                                    </a></li>
                                    <li><a class="dropdown-item rounded py-2" href="/Reports/Analytics">
                                        <i class="bi bi-graph-up me-2 text-primary"></i> Analytics & Reports
                                    </a></li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li><h6 class="dropdown-header text-muted small">Manage Resources</h6></li>
                                    <li><a class="dropdown-item rounded py-2" href="/Admin/Categories">
                                        <i class="bi bi-tags me-2 text-warning"></i> Categories
                                    </a></li>
                                    <li><a class="dropdown-item rounded py-2" href="/Admin/Staff">
                                        <i class="bi bi-person-badge me-2 text-success"></i> Staff
                                    </a></li>
                                    <li><a class="dropdown-item rounded py-2" href="/Admin/Departments">
                                        <i class="bi bi-building me-2 text-info"></i> Departments
                                    </a></li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li><a class="dropdown-item rounded py-2" href="/Admin/Citizens">
                                        <i class="bi bi-people me-2 text-secondary"></i> Citizens
                                    </a></li>
                                </ul>
                            </li>
                        }
                        @if (Context.Session.GetString("UserType") == "Staff")
                        {
                            <li class="nav-item">
                            <a class="nav-link px-3 rounded" href="/Staff/MyWork">
                                    <i class="bi bi-briefcase me-1"></i> My Work
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded" href="/Reports/Analytics">
                                    <i class="bi bi-graph-up me-1"></i> Analytics
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetString("UserType") == "Staff" || Context.Session.GetString("UserType") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded" href="/PrivateChat">
                                    <i class="bi bi-chat-dots me-1"></i> Messages
                                </a>
                            </li>
                        }
                    }
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    <!-- Dark Mode Toggle -->
                    <li class="nav-item d-flex align-items-center me-3">
                        <div class="dark-mode-toggle" id="darkModeToggle" title="Toggle Dark Mode">
                            <i class="bi bi-sun-fill toggle-icon" id="lightIcon"></i>
                            <div class="toggle-switch" id="toggleSwitch"></div>
                            <i class="bi bi-moon-fill toggle-icon" id="darkIcon"></i>
                        </div>
                    </li>
                    @if (Context.Session.GetString("UserType") != null)
                    {
                        <li class="nav-item d-flex align-items-center me-3">
                            <div class="d-flex align-items-center glass-card px-3 py-2" style="background: rgba(255, 255, 255, 0.15); border-radius: 50px;">
                                <div class="bg-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                    <i class="bi bi-person-fill" style="color: var(--primary); font-size: 1.1rem;"></i>
                                </div>
                                <div class="d-none d-lg-block">
                                    <div class="fw-semibold small mb-0" style="line-height: 1.2;">@Context.Session.GetString("UserName")</div>
                                    <div class="opacity-75" style="font-size: 0.7rem; line-height: 1;">@Context.Session.GetString("UserType")</div>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm fw-semibold rounded-pill px-3" href="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light btn-sm fw-semibold rounded-pill px-3" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm fw-semibold rounded-pill px-3" href="/Account/Register">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <main role="main" class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>


    <!-- Enhanced Footer -->
    <footer class="mt-5" style="background: linear-gradient(180deg, var(--gray-50) 0%, white 100%); border-top: 1px solid var(--gray-200);">
        <div class="container py-5">
            <div class="row g-4">
                <!-- About Section -->
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-primary text-white me-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px; border-radius: 50%;">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h5 class="mb-0 fw-bold">Segamat Community</h5>
                    </div>
                    <p class="text-muted small mb-3">
                        Empowering citizens to report issues and track solutions. 
                        Together, we build a better community.
                    </p>
                    <div class="social-links">
                        <a href="#" class="btn btn-outline-secondary btn-circle" aria-label="Facebook">
                            <i class="bi bi-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-circle" aria-label="Twitter">
                            <i class="bi bi-twitter" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-circle" aria-label="Instagram">
                            <i class="bi bi-instagram" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-md-2 col-6">
                    <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.875rem; letter-spacing: 0.05em;">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/Home" class="text-muted text-decoration-none small hover-link">Home</a></li>
                        <li class="mb-2"><a href="/Complaint" class="text-muted text-decoration-none small hover-link">Complaints</a></li>
                        <li class="mb-2"><a href="/Notification" class="text-muted text-decoration-none small hover-link">Notifications</a></li>
                        @if (Context.Session.GetString("UserType") != "Admin" && Context.Session.GetString("UserType") != "Staff")
                        {
                            <li class="mb-2"><a href="/Contact" class="text-muted text-decoration-none small hover-link">Contact Us</a></li>
                        }
                    </ul>
                </div>
                
                <!-- Resources -->
                <div class="col-md-2 col-6">
                    <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.875rem; letter-spacing: 0.05em;">Resources</h6>
                    <ul class="list-unstyled">
                        @if (Context.Session.GetString("UserType") != "Admin" && Context.Session.GetString("UserType") != "Staff")
                        {
                            <li class="mb-2"><a href="/Help" class="text-muted text-decoration-none small hover-link">Help Center</a></li>
                        }
                        <li class="mb-2"><a href="/Help/Faq" class="text-muted text-decoration-none small hover-link">FAQ</a></li>
                        <li class="mb-2"><a href="/Help/Privacy" class="text-muted text-decoration-none small hover-link">Privacy Policy</a></li>
                        <li class="mb-2"><a href="/Help/Terms" class="text-muted text-decoration-none small hover-link">Terms of Service</a></li>
                    </ul>
                </div>
                
                @if (Context.Session.GetString("UserType") != "Admin" && Context.Session.GetString("UserType") != "Staff")
                {
                    <div class="col-md-4">
                        <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.875rem; letter-spacing: 0.05em;">Contact Us</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2 d-flex align-items-start">
                                <i class="bi bi-envelope me-2 text-primary"></i>
                                <span class="text-muted small">support@citizenvoice.gov</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start">
                                <i class="bi bi-telephone me-2 text-primary"></i>
                                <span class="text-muted small">1-800-CITIZEN (248-4936)</span>
                            </li>
                            <li class="mb-2 d-flex align-items-start">
                                <i class="bi bi-geo-alt me-2 text-primary"></i>
                                <span class="text-muted small">Government Building, City Hall<br>Main Street, Your City</span>
                            </li>
                        </ul>
                    </div>
                }
            </div>
            
            <!-- Bottom Bar -->
            <hr class="my-4" style="border-color: var(--gray-200);">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 small text-muted">
                        &copy; 2025 Segamat Community Complaint Management System. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-2 mt-md-0">
                    <small class="text-muted">
                        Made with <i class="bi bi-heart-fill text-danger"></i> for better communities
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <style>
        .hover-link {
            transition: all 0.2s ease;
        }
        .hover-link:hover {
            color: var(--primary) !important;
            transform: translateX(4px);
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/darkmode.js"></script>
    <partial name="_Chatbot" />
    <script src="~/js/chatbot.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
