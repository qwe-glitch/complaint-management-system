<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Segamat Community</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/intro.css" />
    <link rel="stylesheet" href="~/css/darkmode.css" />
    <script type="module" src="https://unpkg.com/@@splinetool/viewer@latest/build/spline-viewer.js"></script>
</head>
<body class="intro-body">

    <!-- Navigation matching system style -->
    <nav class="navbar navbar-expand-lg navbar-dark intro-navbar">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center fw-bold" href="/">
                <div class="icon-circle bg-white text-primary me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                    <i class="bi bi-shield-check" style="font-size: 1.25rem; color: var(--primary);"></i>
                </div>
                <span class="d-none d-md-inline">Segamat Community</span>
                <span class="d-md-none">CMS</span>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto small">
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded" asp-controller="Announcement" asp-action="Index">
                            <i class="bi bi-megaphone me-1"></i> Announcements
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    <!-- Dark Mode Toggle -->
                    <li class="nav-item d-flex align-items-center me-3">
                        <div class="dark-mode-toggle" id="darkModeToggle" title="Toggle Dark Mode">
                            <i class="bi bi-sun-fill toggle-icon" id="lightIcon"></i>
                            <div class="toggle-switch" id="toggleSwitch"></div>
                            <i class="bi bi-moon-fill toggle-icon" id="darkIcon"></i>
                        </div>
                    </li>
                    @if (Context.Session.GetString("UserType") != null)
                    {
                        <li class="nav-item d-flex align-items-center me-3">
                            <div class="d-flex align-items-center glass-card px-3 py-2" style="background: rgba(255, 255, 255, 0.15); border-radius: 50px;">
                                <div class="bg-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                    <i class="bi bi-person-fill" style="color: var(--primary); font-size: 1.1rem;"></i>
                                </div>
                                <div class="d-none d-lg-block">
                                    <div class="fw-semibold small mb-0" style="line-height: 1.2;">@Context.Session.GetString("UserName")</div>
                                    <div class="opacity-75" style="font-size: 0.7rem; line-height: 1;">@Context.Session.GetString("UserType")</div>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm fw-semibold rounded-pill px-3" href="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light btn-sm fw-semibold rounded-pill px-3" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm fw-semibold rounded-pill px-3" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/intro.js"></script>
    <script src="~/js/darkmode.js"></script>
</body>
</html>